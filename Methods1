<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notification Popover with Table</title>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <style>
    body {
      padding: 40px;
      background-color: #f9fafb;
    }
    .notification-btn {
      position: relative;
    }
    .popover {
      max-width: 500px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 14px;
    }
    table th, table td {
      border: 1px solid #ddd;
      padding: 6px 10px;
      text-align: left;
    }
    table th {
      background-color: #f1f1f1;
    }
  </style>
</head>
<body>

  <div class="container text-center">
    <button id="notificationBtn" type="button" class="btn btn-primary notification-btn" data-bs-toggle="popover" data-bs-html="true" title="Notifications">
      ðŸ”” Notifications
    </button>
  </div>

  <!-- jQuery & Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    $(document).ready(function () {
      // Create table HTML dynamically
      var tableData = `
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Message</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <tr><td>1</td><td>Server restarted successfully</td><td>2025-10-08</td></tr>
            <tr><td>2</td><td>New user registered</td><td>2025-10-07</td></tr>
            <tr><td>3</td><td>Backup completed</td><td>2025-10-06</td></tr>
          </tbody>
        </table>
      `;

      // Initialize popover
      var popover = new bootstrap.Popover($('#notificationBtn')[0], {
        content: tableData,
        trigger: 'manual',
        placement: 'bottom'
      });

      // Show by default
      popover.show();
	$(".popover-body").html(tableData);
      // Toggle on button click
      $('#notificationBtn').on('click', function (e) {
        e.stopPropagation(); // prevent closing when clicking button
       popover.show();
			$(".popover-body").html(tableData);
      });

      // Close popover when clicking anywhere else
      $(document).on('click', function (e) {
        if (
          !$(e.target).is('#notificationBtn') && // not the button
          $(e.target).closest('.popover').length === 0 // not inside popover
        ) {
          popover.hide();
        }
      });
    });
  </script>

</body>
</html>
